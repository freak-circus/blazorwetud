@page "/materials"

<div class="materials-container">
    @foreach (var subject in Subjects)
    {
        <a class="material-tile" href="@subject.Url">
            <div class="material-icon">@subject.Icon</div>
            <div class="material-name">@subject.Name</div>
        </a>
    }
</div>

